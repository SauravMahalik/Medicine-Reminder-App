<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.devan.medicine_reminder">

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hands"
        android:label="@string/app_name"
        
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.devan.medicine_reminder.View.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.devan.medicine_reminder.View.AddNewMedicineActivity"
            android:label="Add Medicine"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.MainActivity"
            android:label="Main Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.UserDetails"
            android:label="Add Details"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.Home"
            android:label="Home"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.Hamburger"
            android:label="Main Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.EditUserDetails"
            android:label="Edit User Details"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.MyMedication"
            android:label="My Medication"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.Calender"
            android:label="Calender"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.SettingsHome"
            android:label="@string/app_name_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.SettingsResetApplication"
            android:label="@string/app_name_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.DeleteMedicine"
            android:label="DeleteMedicines"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.example.devan.medicine_reminder.View.Camera"
            android:label="Camera"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.devan.medicine_reminder.View.DeleteUser"
            android:label="DeleteUser"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.Help"
            android:label="Help and Support"
            android:screenOrientation="portrait" />

        <receiver
            android:name="com.example.devan.medicine_reminder.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.example.devan.medicine_reminder.View.About_Us"
            android:label="About Us"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.devan.medicine_reminder.View.NotificationDisplayMedicine"
            android:label="Medicine Details"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.devan.medicine_reminder.View.MedicalReport"
            android:label="Medical Report"
            android:screenOrientation="portrait"/>
    </application>

</manifest>